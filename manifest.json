{
  "manifest_version": 3,

  "name": "Tanuki Notifier for Google Chromeâ„¢",
  "description": "Notify GitLab events (Commit, Issue, MergeRequest and Milestone)",
  "version": "3.0.0",

  "icons": {
    "16": "img/logo_16.png",
    "48": "img/logo_48.png",
    "128": "img/logo_128.png"
  },

  "permissions": [
    "background",
    "notifications"
  ],

  "host_permissions": [
    "http://*/",
    "https://*/"
  ],

  "options_page": "options.html",

  "background": {
    "page": "background.html"
  },

  "browser_action": {
    "default_icon": "img/logo_128.png",
    "default_popup": "popup.html"
  }
}
